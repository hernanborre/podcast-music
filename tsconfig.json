{
  "compilerOptions": {
    // üëáÔ∏è set jsx to react-jsx
    //"jsx": "react-jsx",
    "jsx": "preserve",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
    // "target": "es5",
    // "module": "commonjs",
    // "jsx": "react-jsx",
    // "outDir": "./dist",
    // "strict": true,
    // "baseUrl": "src",
    // "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/**/*.spec.ts", "build/**/*"]
}
